@model VierGewinnt.ViewModels.LoginViewModel

@{
    ViewBag.Title = "User Login";
}



<link href="~/css/StyleSheet.css" rel="stylesheet" />
<div id="particles-js" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>

<div style="position: relative; z-index: 1;">
    <div style="margin-left: 5vw; margin-top: 5vh; width: 90vw; height: 90vh; border-radius: 15%; background-color: rgba(100, 100, 120, 0.85);">
        <div class="container-fluid d-flex justify-content-center align-items-center h-100">
            <div class="row">
                <!-- Left Side: Title and Sign Up Form -->
                <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                    <div class="text-center mb-4">
                        <h1>Welcome to R0b0K1ng</h1>
                    </div>
                    <div class="text-center mb-4">
                        <h3>The leading specialists when it comes to playing Connect 4 online</h3>
                    </div>
                    <div class="text-center mb-4" style="margin-top: 10%;">
                        <h3>Login now</h3>
                    </div>
                    <div class="col-md-8">
                        <form asp-action="Index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">                                
                                <label asp-for="Email" class="control-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Email" class="form-control" type="text" id="email" name="Email" />                                
                            </div>
                            <div class="form-group">                               
                                <label asp-for="Password" class="control-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="Password" class="form-control" type="password" id="password" name="Password" />
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-action="Login" asp-controller="Account" type="submit" class="success-btn btn btn-primary" style="width: 5vw" value="Login"/>
                                <a asp-action="SignIn" asp-controller="Account" type="button" class="btn btn-primary">Register</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Right Side: Image -->
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <img src="~/lib/Pictures/Roboking.jpg" class="img-fluid" alt="Roboking Image" style="width: 80%; height: auto; border-radius: 25% 10%; margin: 10px; box-shadow: 0px 20px 25px #9ac0ff;">
                </div>
            </div>
        </div>
    </div>
</div>
