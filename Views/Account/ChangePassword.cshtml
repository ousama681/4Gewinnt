@model Account
@{
    ViewData["Title"] = "Change Password";
}
<div id="particles-js" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>

<div style="position: relative; z-index: 1;">
<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="p-5 shadow rounded" style="background-color: rgba(100, 100, 120, 0.85); width: 50%;">
        <div class="text-center">
            <h3 class="display-4">Change Password</h3>
        </div>
            <div class="row mt-4 justify-content-center">
            <div class="col-md-8">
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" id="password" name="Password"  />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Confirm Password</label>
                        <input class="form-control" type="password" id="confirmPassword" name="ConfirmPassword"  />
                    </div>
                    <div class="form-group">
                        <button asp-action="ChangePassword" asp-controller="Account" type="button" id="login-btn" class="success-btn btn btn-primary">Change Password</button>
                        <a asp-action="Index" asp-controller="Home" id="register-btn" type="button" class="btn btn-secondary ml-3">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>


