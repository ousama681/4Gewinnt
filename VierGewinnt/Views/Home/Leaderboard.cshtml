@model VierGewinnt.ViewModels.LeaderboardViewModel;
@using VierGewinnt.Data.Model;

@{
    ViewData["Title"] = "Leaderboard";
}
<div class="container">
    <div class="row mt-4">
        <div class="col text-center">
            <h2 class="text-light">Bestenliste</h2>
        </div>
    </div>
 
</div>
<ul>
    @foreach (PlayerRanking pr in Model.PlayerRankings)
    {
        <li class="list-group-item" style="width:33%;">
            <div class="d-flex flex-column align-items-center">
                <label class="fw-bold mb-2">@pr.Player.UserName</label>
                <label>@pr.Wins</label>
            </div>
        </li>
    }
</ul>